{% extends 'base.html.twig' %}
{% block title %}Flags{% endblock %}

{% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
 <link href="Csstables/bootstrap.css" rel="stylesheet" type="text/css">
        <!-- Custom styles for this template -->
        <link rel="stylesheet" href="Csstables/Blocks.css">
        <link href="Csstables/Styles.css" rel="stylesheet">
{% endblock %}

{% block body %}


        <section class="bg-secondary text-white">
            <div class="container-xxl">
                <div class="row" style="min-height: 71vh;">
                    <div class="flex-column justify-content-center">
                        <div class="container-xl">
                            <div class="row">
                                <div class="col-md-4">
                                    <h3>Gestion des équipes</h3>
                                    <img src="http://pinegrow.com/placeholders/img11.jpg" width="350"> 
                                </div>
                                <div class=" col-md-4 me-0"> 
</div>
                                <div class=" col-md-4 me-0">
                                    <p class=" mb-5 pb-4 pt-4">
										Cet espace permet de gérer les flags (Ajout, Edition et Suppression).                                    
</p> 
                                    <a href="/flag/nouveau" class="btn btn-light float-end" role="button">Ajouter un flag</a>
                                </div>
                            </div>
                        </div>
                        <div class=" container-xxl mt-5">
                            <table class="table table-striped table-dark">
                                <thead>
                                    <tr class="table-primary">
                                        <th scope="col" class="text-center">ID</th>
                                        <th scope="col" class="text-center">Titre</th>
                                        <th scope="col" class="text-center"></th>
                                        <th scope="col" class="text-center"></th>
                                        <th scope="col" class="text-center">Edition</th>
                                        <th scope="col" class="text-center">Suppression</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for unflag in flags %}
                                    <tr class="text-white">
                                        <th scope="row">{{ unflag.getId() }}</th>
                                        <td class="text-center">{{unflag.getTitreQuestion()}}</td>
                                        <td class="text-center"></td>
                                        <td class="text-center"></td>
                                        <td class="text-center"> 
                                            <a href="/equipe/{{ unflag.getId() }}/edit" class="btn btn-primary" role="button">Editer</a>
                                        </td>
                                        <td class="text-center"> 
                                            <a href="#" class="btn btn-primary" role="button">Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>                             
                        </div>
                    </div>
                </div>
            </div>
        </section>

{% endblock %}