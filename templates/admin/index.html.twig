{% extends 'base.html.twig' %}

{% block title %}Gérer les catégories{% endblock %}

{% block body %}
	<h1>Gérer les catégories</h1>
    <a  class="btn blue">Ajouter une catégorie</a>
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Nom</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
        {% for equipe in equipes %}            
			<tr>
				<td>{{equipe.id}}</td>
				<td>{{equipe.nom}}</td>
				<td class="text-center">
                    <a  class="btn blue">Modifier</a>
                </td>
			</tr>
        {% endfor %}
		</tbody>
	</table>
{% endblock %}

