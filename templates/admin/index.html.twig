{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12"> 
			<div class="card">
				<div class="card-body">
					<h1 class="card-title">Liste equipe</h1>
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>Nom Equipe</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
							{% for equipe in equipe %}            
								<tr>
									<td>{{equipe.nom}}</td>
									<td class="text">
										<button type="button" class="btn btn-block btn-primary btn-lg">
											Modifier
										</button>
										<button type="button" class="btn btn-block btn-danger btn-lg">
											Supprimer
										</button>
									</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>	
		</div>	
		<div class="col-md-12"> 
			<div class="card">
				<div class="card-body">
					<h1 class="card-title">Liste flags</h1>
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>ID</th>
									<th>Titre</th>
									<th>Question</th>
									<th>Réponse</th>
									<th>Points</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
							{% for flag in flag %}            
								<tr>
									<td>{{flag.nID}}</td>
									<td>{{flag.titreQuestion}}</td>
									<td>{{flag.textQuote}}</td>
									<td>{{flag.textReponse}}</td>
									<td>{{flag.points}}</td>
									<td class="text">
										<button type="button" class="btn btn-block btn-primary btn-lg">
											Modifier
										</button>
										<button type="button" class="btn btn-block btn-danger btn-lg">
											Supprimer
										</button>
									</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
						<button type="button"  class="btn btn-success">
            			Créer un flag
           				</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

